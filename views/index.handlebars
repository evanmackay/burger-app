<div style="background-image:url(https://thumbs.dreamstime.com/b/hamburger-bun-close-up-food-background-texture-71350367.jpg);">
  <h1 style="text-align: center; margin: 3rem; font-size: 50px;">Burger Tracker!</h1>
  <hr>  
  <div class="row">
    <div class="col-6" style="text-align: center;">
      <h2>Burgers to be Devoured</h2>

        <ul class="list-group" style="list-style-type: none;">
          {{#each burgers}}
            {{#unless devoured}}
              {{> burger/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="col-6" style="text-align: center;">
      <h2>Burgers you have devoured!</h2>

        <ul class="list-group" style="list-style-type: none;">
          {{#each burgers}}
            {{#if devoured}}
              <li class="list-group-item" style="margin: 1rem; font-size: 30px">{{burger_name}}</li>
            {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>

  <hr>

  <div class="col-12" style="align-items: center; margin-top: 5rem" >
    <h1 style="font-size: 50px; text-align: center">Add a Burger to the List!</h1>
    <form class="create-form">
      <div class="form-group row">
        <label for="colFormLabelLg" style="font-size: 30px; text-align: right" class="col-sm-3 col-form-label col-form-label-lg">Burger:</label>
        <div class="col-sm-6">
          <input type="input" style="margin-top: .5rem;" class="form-control" id="colFormLabelLg">
        </div>
      <button class="btn btn-dark">Add Burger!</button>
      </div>
    </form>

  </div>
</div>
